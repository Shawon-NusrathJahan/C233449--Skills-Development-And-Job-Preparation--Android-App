<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/color_job_preparation</item>
        <item name="colorOnPrimary">@color/asset_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_skills_development</item>
        <item name="colorSecondaryVariant">@color/color_career_guidelines</item>
        <item name="colorOnSecondary">@color/asset_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.MyApplication.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/asset_medium</item>
        <item name="fullscreenTextColor">@color/secondary</item>
    </style>
</resources>